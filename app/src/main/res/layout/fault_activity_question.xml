<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/activity_nav"
        layout="@layout/widget_activity_nav_new"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/widget_size_nav_height" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_20"
        android:padding="@dimen/padding_10">

        <TextView
            android:id="@+id/textView_reqcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_colon"
            android:gravity="center"
            android:text="@string/label_reqcontent"
            android:textSize="@dimen/text_size_list_medium" />

        <EditText
            android:id="@+id/editText_reqcontent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxHeight="250dp"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_toRightOf="@+id/textView_reqcontent"
            android:background="@drawable/round_cornor_gray_shape"
            android:gravity="center|left|top"
            android:hint="@string/label_question"
            android:inputType="textMultiLine"
            android:minLines="15" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_confirm"
            android:layout_width="@dimen/widget_size_btn_large_width"
            android:layout_height="@dimen/widget_size_btn_large_height"
            android:layout_marginRight="@dimen/padding_medium"
            android:background="@drawable/style_border_oval_green_middle"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/label_submit"
            android:textColor="@color/white1"
            android:textSize="@dimen/text_size_list_medium" />
    </LinearLayout>
</LinearLayout>