<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <include
        android:id="@id/activity_nav"
        layout="@layout/widget_activity_nav_main"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/widget_size_nav_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_nav"
        android:layout_marginTop="@dimen/padding_large">

        <LinearLayout
            android:layout_width="@dimen/widget_size_main_item_large_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="4.0">

            <LinearLayout
                android:id="@+id/ll_bingLi"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/widget_size_main_item_height"
                android:background="@drawable/style_btn_main_menuitem_green"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_emr"
                    android:drawablePadding="@dimen/padding_large"
                    android:gravity="center"
                    android:text="@string/title_activty_medicalhistory"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/text_meddium_size1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_jiLu"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/widget_size_main_item_height"
                android:layout_marginTop="@dimen/padding_30"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2.0">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/style_btn_main_menuitem_green"
                    android:contentDescription="当日就诊记录"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_reception"
                        android:drawablePadding="@dimen/padding_32"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_large"
                        android:text="@string/title_activity_reception"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/text_meddium_size1" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/padding_30"
                    android:layout_height="1.0dip" />

                <LinearLayout
                    android:id="@+id/ll_jianYan"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/style_btn_main_menuitem_green"
                    android:clickable="true"
                    android:contentDescription="做检验"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/test"
                        android:drawablePadding="@dimen/padding_32"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_large"
                        android:text="@string/title_activity_test"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/text_meddium_size1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/widget_size_main_item_height"
                android:layout_marginTop="@dimen/padding_30"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2.0">

                <LinearLayout
                    android:id="@+id/ll_kaiFang"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/style_btn_main_menuitem_green"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_prescription"
                        android:drawablePadding="@dimen/padding_32"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_large"
                        android:text="@string/title_activity_prescription"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/text_meddium_size1" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/padding_30"
                    android:layout_height="1.0dip" />

                <LinearLayout
                    android:id="@+id/ll_jieSuan"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/style_btn_main_menuitem_green"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_charge"
                        android:drawablePadding="@dimen/padding_32"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_large"
                        android:text="@string/title_activity_charge"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/text_meddium_size1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/widget_size_main_item_height"
                android:layout_marginTop="@dimen/padding_30"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2.0">

                <LinearLayout
                    android:id="@+id/ll_yaoPing"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/style_btn_main_menuitem_green"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_drug"
                        android:drawablePadding="@dimen/padding_32"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_large"
                        android:text="@string/title_activity_drug"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/text_meddium_size1" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/padding_30"
                    android:layout_height="1.0dip" />

                <LinearLayout
                    android:id="@+id/ll_baoBiao"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/style_btn_main_menuitem_green"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_report"
                        android:drawablePadding="@dimen/padding_32"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding_large"
                        android:text="@string/title_activity_report"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/text_meddium_size1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/padding_medium"
        android:src="@drawable/ic_logo" />
</RelativeLayout>