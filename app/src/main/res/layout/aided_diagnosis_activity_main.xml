<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <include
        android:id="@id/widget_nav"
        layout="@layout/widget_activity_nav_main"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/widget_size_nav_height" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:weightSum="2.0">

        <RelativeLayout
            android:id="@+id/rl_xunZheng"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_50"
            android:layout_weight="1.0"
            android:background="@drawable/style_btn_main_menuitem_blue"
            android:gravity="center">

            <TextView
                android:id="@+id/textView_znxz"
                android:layout_width="200.0dip"
                android:layout_height="200.0dip"
                android:drawableTop="@drawable/znxz"
                android:gravity="center"
                android:text="@string/label_ad_znxz"
                android:textColor="#ffffffff"
                android:textSize="@dimen/text_huge_size" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/padding_medium"
            android:layout_height="@dimen/size_apd_item_row_height" />

        <RelativeLayout
            android:id="@+id/rl_jiBingKu"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_50"
            android:layout_weight="1.0"
            android:background="@drawable/style_btn_main_menuitem_blue"
            android:gravity="center">

            <TextView
                android:id="@+id/textView_jbzlk"
                android:layout_width="200.0dip"
                android:layout_height="200.0dip"
                android:drawableTop="@drawable/jbzlk"
                android:gravity="center"
                android:text="@string/label_ad_jbzlk"
                android:textColor="#ffffffff"
                android:textSize="@dimen/text_huge_size" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/padding_medium"
        android:src="@drawable/ic_logo" />
</RelativeLayout>