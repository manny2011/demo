<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue2</item>
        <item name="colorPrimaryDark">@color/blue1</item>
        <item name="colorAccent">@color/blue2</item>
        <!--android:configChanges="screenSize|keyboardHidden|orientation"
            android:screenOrientation="landscape"-->
        <item name="android:configChanges">screenSize|keyboardHidden|orientation</item>
        <item name="android:screenOrientation">landscape</item>
        <!--<item name="android:windowAnimationStyle">@style/fade</item>-->
    </style>

    <style name="LandScapeOrientation" parent="AppTheme">
        <item name="android:screenOrientation">landscape</item>
        <item name="android:configChanges">orientation|screenSize|keyboardHidden</item>
    </style>

    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item>
    </style>



</resources>
